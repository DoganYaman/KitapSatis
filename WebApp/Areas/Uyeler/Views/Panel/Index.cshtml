@model IEnumerable<WebApp.Models.Sepet>
@{
    ViewData["Title"] = "Index";
}

<h1>Sepetteki Kitaplar</h1>

<table class="table">
    @foreach (Sepet sepet in Model)
    {
        <tr>
            <td>@sepet.Kitap.KitapAdi</td>
            <td>@sepet.Adet</td>
            <td><a asp-area="Uyeler" asp-controller="Panel" asp-action="SepettenCikar" asp-route-id="@sepet.SepetID">Sepetten Çıkar</a></td>
        </tr>
    }
    @if (Model.Count() > 0)
    {
    <form asp-action="SatinAl" method="post">
    <tr>
        <td></td>
        <td></td>
        <td><input type="submit" value="Satın Al" class="btn btn-primary" /></td>
    </tr>
    </form>
    <form asp-action="SepetiBosalt" method="post">
    <tr>
        <td><input type="submit" value="Tüm Sepeti Temizle" class="btn btn-danger" /></td>
        <td></td>
        <td></td>
    </tr>
    </form>
    }
    <tr>
        <td colspan="3">
           <p class="text-danger"> @TempData["Mesaj"]</p>
        </td>
    </tr>
    @{          TempData.Clear();
    }
</table>

