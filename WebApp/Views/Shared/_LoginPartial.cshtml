@using Microsoft.AspNetCore.Identity
@inject SignInManager<Uye> SignInManager
@inject UserManager<Uye> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        if (User.IsInRole("Admin"))
        {
<li class="nav-item">
    <form class="form-inline" asp-area="Admin" asp-controller="Panel" asp-action="Index">
        <button type="submit" class="nav-link btn btn-link text-dark">Panel</button>
    </form>
</li>
 }
                else if (User.IsInRole("Uye"))
                {
<li class="nav-item">
    <form class="form-inline" asp-area="Uyeler" asp-controller="Panel" asp-action="Index">
        <button type="submit" class="nav-link btn btn-link text-dark">Sepetim</button>
    </form>
</li>
 }


<li class="nav-item">
    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
</li>
<li class="nav-item">
    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
    </form>
</li>
}
else
{
<li class="nav-item">
    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
</li>
<li class="nav-item">
    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
</li>
}
</ul>
